@using TEG.SSO.Entity.DTO;
@{
    ViewData["title"] = "管理系统";
    Layout = "~/Shared/_RootLayout.cshtml";
}

@section style{

}

@section script{
    <script src="~/js/perfect-scrollbar.min.js"></script>
    <script src="~/js/main.min.js"></script>
    <script type="text/javascript">
        function logout() {
            $.post("/home/logout", {}, function (data) {
                if (data.isSuccess) {
                    layer.alert("注销成功", function () { location.href = "/" });
                }
                else {
                    layer.alert(data.msg);
                }
            });
        }

        $(function () {
            $(".sidebar-main li").bind("click", function () {
                $(".sidebar-main li").removeClass("active");
                $(this).addClass("active");
            });
        });
    </script>

}

<div class="lyear-layout-web" style="height:inherit">
    <div class="lyear-layout-container" style="height:inherit">
        <!--左侧导航-->
        <aside class="lyear-layout-sidebar">
            <!-- logo -->
            <div id="logo" class="sidebar-header">
                <a href="/home"><img src="images/logo-sidebar.png" /></a>
            </div>
            <div class="lyear-layout-sidebar-scroll">

                <nav class="sidebar-main">
                    <ul class="nav nav-drawer">
                        @{
                            //todo:展示是需要通过menuCode在本地获取对应的url和菜单名称，菜单图标
                            var first = true;
                            var menus = (List<AuthRight>)ViewBag.Menus;
                            foreach (var m in menus.Where(a => a.ParentID == null))
                            {
                                if (!menus.Any(a => a.ParentID == m.MenuID))
                                {
                                    <li class='nav-item @(first?"active":"")'> <a href='@m.MenuCode'><i class='mdi mdi-home'></i> @m.MenuName </a> </li>
                                }
                                else
                                {
                                    <li class="nav-item nav-item-has-subnav @(first?"active":"")">
                                        <a href="javascript:void(0)"><i class="mdi mdi-format-align-justify @(first?"active":"")"></i>@m.MenuName</a>
                                        <ul class="nav nav-subnav">
                                            @foreach (var child in menus.Where(a => a.ParentID == m.MenuID))
                                            {
                                                if (!menus.Any(a => a.ParentID == child.MenuID))
                                                {
                                                    <li> <a href="@child.MenuCode" target="content">@child.MenuName</a> </li>
                                                }
                                                else
                                                {
                                                    <li class="nav-item nav-item-has-subnav">
                                                        <a href="@child.MenuCode" target="content">@child.MenuName</a>
                                                        <ul class="nav nav-subnav">
                                                            @foreach (var child2 in menus.Where(a => a.ParentID == child.MenuID))
                                                            {
                                                                <li><a href="@child2.MenuCode">@child2.MenuName</a></li>
                                                            }
                                                        </ul>
                                                    </li>
                                                }
                                            }
                                        </ul>
                                    </li>
                                }
                                first = false;
                            }
                        }                     
                    </ul>
                </nav>

                <div class="sidebar-footer">

                </div>
            </div>

        </aside>
